{% extends 'base.html.twig' %}

{% block title 'Login! TSV STAGE MAKER' %}

{% block body %}

    <div class="container bg-login mt-10">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <h1 class="mt-5 mb-3 text-center">Please sign in</h1>
                <p class="text-center text-muted mb-3">Stage make ready !<br>DVC</p>
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger rounded mb-3 mt-3" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                   {#  {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %} #}
                    
                    <div class="form-group">
                         <label for="email">Email</label>
                    <input type="text" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
                    </div>

                    <div class="form-group">
                         <label class="mt-3" for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                    </div> 

                    <div class="d-flex justify-content-between">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="remember_me" name="_remember_me">
                                <label class="custom-control-label" for="remember_me">
                                Remember me
                                </label>
                            </div> 
                        </div> 
                        <a href="#">Forgot password</a>
                     </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-lg btn-info btn-block" type="submit">
                        Sign in
                    </button>
                    <p class="mt-3 mb-3 text-center text-muted">Not registered yet ? <a href="#">Create an account</a></p>
                </form>
            </div>
        
        </div>        
    </div>

{% endblock %}
