{% extends 'base.html.twig' %}

{% block title 'Reset your password' %}

	{% block body %}

		<div class="container mt-10">
			<div class="row"> 
			 	<div class="col-md-6 mx-auto">
			 		<h1 class="mt-5 mb-3 text-center">Reset your password</h1>

					{% for flashError in app.flashes('reset_password_error') %}
						<div class="alert alert-error mb-3 rounded" role="alert">{{ flashError }}
						</div>
					{% endfor %}
				
						<p class="text-center text-muted mb-5">
						Enter your email address and we we will send you a
						link to reset your password.
						</p>
							
								{{ form_start(requestForm) }}
								{{ form_row(requestForm.email) }}					

							<button type="submit" class="btn btn-info btn-block btn-sm">
								Send password reset email
							</button>
							{{ form_end(requestForm) }} 						
				</div>
			</div>
		</div>

	{% endblock %}