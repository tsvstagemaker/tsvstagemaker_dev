              <div class="col-md-6">
                {{ form_row(EditProfileForm.firstName) }}
            </div>
        </div>

         <div class="row">
            <div class="col-md-6">
                {{ form_row(EditProfileForm.club) }}
            </div>
              <div class="col-md-6">
                {{ form_row(EditProfileForm.region) }}
            </div>
        </div>

        {{ form_row(EditProfileForm.division) }}

      {#   <div class="row">           
              <div class="col-md-12">
                 {{ form_row(EditProfileForm.plainPassword, {
            label: 'Password'
        }) }}
            </div>
        </div>  #}     

        <button class="btn btn-info btn-lg btn-block" type="submit">Edit</button>
    {{ form_end(EditProfileForm) }}
    <p class="mt-3 text-center text-muted">
       To unsubscribe <a href="#">click here</a>
    </p>
    </div>  
    </div>
</div>
   
    
</div>
    
