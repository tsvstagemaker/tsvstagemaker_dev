<div class="container mt-10">

<div class="row">
    <div class="col-md-6 mx-auto">
       <h1 class="my-5 text-center">Edit {{ app.user.pseudo|capitalize }} profil</h1>
    <div class="form-group">
        {{ form_start(EditProfileForm) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(EditProfileForm.pseudo,{
