{% extends 'base.html.twig' %}

{% block title 'Contact us!' %}

{% block body %}
   
    
<div class="container mt-10">

<div class="row">
    <div class="col-md-6 mx-auto">
       <h1 class="my-5 text-center">Contact us</h1>
    <div class="form-group">
        {{ form_start(ContactForm) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(ContactForm.firstName) }}
            </div>
              <div class="col-md-6">
                {{ form_row(ContactForm.pseudo) }}
            </div>            
        </div>

        <div class="row">           
              <div class="col-md-12">
                {{ form_row(ContactForm.email) }}
            </div>
        </div>

        <div class="row">           
              <div class="col-md-12">
                {{ form_row(ContactForm.message) }}
            </div>
        </div>

        <button class="btn btn-info btn-lg btn-block" formnovalidate type="submit">Send</button>
    	{{ form_end(ContactForm) }}
        <p class="mt-3 mb-3 text-center text-muted">Not registered yet ? <a href="{{ path('app_register') }}">Create an account</a></p>

    </div>  
    </div>
</div>
   
    
</div>
    
{% endblock %}

