{% block body %}

	<div class="container-fluid container-create-stage">	


		<div class="row">
		<div class="col-md-6 main border border-dark rounded mx-auto my-auto">
		
			<div id="dropzone" class="dropzone">
				<p class="text-muted text-center">
            <small>
                &copy; {{ 'now'|date('Y') }} &middot;
                Version 3.0 Built by YB <a href="https://www.tsvstagemaker.fr">tsvstagemaker.fr &reg;</a>                        
            </small> 
            </p>      
			</div>

			{# Tableau de calcule  #}		
			{# <input value="{{ csrf_token('stage_create') }}" name="_token" type="hidden"> #}
			{{ form_start(CreateStageForm) }}

			<div class="row text-center">
				<div class="col-md-12">
				<div class="form-group">
					<div class="row">
						<div class="col-md-6">
							{{ form_row(CreateStageForm.stagename) }}	
						</div>
						<div class="col-md-6">
							{{ form_row(CreateStageForm.stagenumber) }}
						</div>
					</div>
					<div class="row">
						<div class="col-md-4">
							<img src="{{ asset('images/points3.png') }}" title="Points" style="max-width: 25px;">
								{{ form_row(CreateStageForm.MaxPoints) }}
						</div>
						<div class="col-md-4">
							{{ form_row(CreateStageForm.StartOn) }}	
						</div>
						<div class="col-md-4">
							{{ form_row(CreateStageForm.CourseId) }}
						</div>
					</div>

					<div class="row">
						<div class="col-md-2">
							<img src="{{ asset('images/LogoBallecoups.png') }}" title="Rounds" style="max-height: 45px;">&nbsp;&nbsp;&nbsp;<p style="margin-top: 12px;font-size: 20px" class="bord MinRounds" id="nbcp"name="MinRounds" id="MinRounds"></p>
								{{ form_row(CreateStageForm.MinRounds) }}
						</div>
						<div class="col-md-2">
							<img src="{{ asset('images/LogoTarget.png') }}" title="IPSC Targets" style="max-width: 25px;"> 
								{{ form_row(CreateStageForm.TrgtPaper) }}
						</div>
						<div class="col-md-2">
						<img src="{{ asset('images/IPSC_Popper.svg') }}" title="Poppers" style="max-width: 15px;"> 
								{{ form_row(CreateStageForm.TrgtPopper) }}
						</div>
						<div class="col-md-2">
						<img src="{{ asset('images/LogoPlate.png') }}" title="PLates" style="max-width: 25px; max-height: 30px;">
								{{ form_row(CreateStageForm.TrgtPlates) }}
						</div>
						<div class="col-md-2">
							<img src="{{ asset('images/IPSC_Bobber.gif') }}" title="Bobbers" style="max-width: 25px;">
								{{ form_row(CreateStageForm.bobber) }}
						</div>
						<div class="col-md-2">
							<img src="{{ asset('images/IPSC_Target_NS.png') }}"title="No Shoot" style="max-width: 25px;"> 
								{{ form_row(CreateStageForm.TrgtPenlty) }}
						</div>					
					</div>
						<div class="row">
							<div class="col-md-12">
								<div style="border: none; border-color: transparent;" rows="4" cols="55" contenteditable='true'>
									{{ form_row(CreateStageForm.StartPos) }}                        
								</div>
							</div>
						
						</div>
						<div class="row">
							<div class="col-md-12">
								<div style="border: none; border-color: transparent;" rows="3" cols="55"  contenteditable='true'>
									{{ form_row(CreateStageForm.Descriptn) }}                       
								</div>
							</div>							
						</div>
					</div>

				</div>

			</div>
				
				{# {{ form_row(CreateStageForm.TrgtVanish) }} #}				
				 
		</div>

		<div class="col-md-6 menu mx-auto my-auto text-center">
		
			<div class="row">
				<div class="col-md-12">				
						{{ form_row(CreateStageForm.MatchsId) }}	
						{{ form_row(CreateStageForm.FirearmId) }}						
										
					<div class="row">
						<div class="col-md-6">
							{{ form_row(CreateStageForm.TrgtTypeId) }}
						</div>
						<div class="col-md-6">
						{{ form_row(CreateStageForm.ScoringId) }}
						</div>
					</div>	
					<div class="row">
						<div class="col-md-6">
							{{ form_row(CreateStageForm.ReportOn) }}						
						</div>
						<div class="col-md-6">
