					.infoi{
						color: #ffffff;
					}

					/*newtable*/
					.tg  {
						border-collapse:collapse;
						border-spacing:0;
						width: 100%;
						text-align: center;
					}

					.tg td{
						border-color:black;border-style:solid;
						border-width:1px;
						font-family:Arial,sans-serif;
						font-size:14px;
